<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textotitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:text="Be Calm"
        android:textColor="@color/white"
        android:textSize="50dp" />


    <TextView
        android:id="@+id/textoinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:text="Music  has  the  powerful  ability  to  distract  and  settle  the  mind. Uplifting  music  helps  divert  focus  onanxiety,  while  relaxing  music  settles  and  calms  the  mind."
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/efecto_btn" />


</RelativeLayout>