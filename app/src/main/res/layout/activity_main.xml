<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoinicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Music  has  the  powerful  ability  to  distract  and  settle  the  mind. Uplifting  music  helps  divert  focus  onanxiety,  while  relaxing  music  settles  and  calms  the  mind."
        />

    <Button
        android:id="@+id/btn"
        android:layout_height="200sp"
        android:layout_width="200sp"
        android:layout_centerInParent="true"
        android:background="@drawable/efecto_btn"

        />


</RelativeLayout>