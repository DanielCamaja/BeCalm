<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:ignore="SmallSp">


    <Button
        android:id="@+id/authorize"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/spotify_connect"
        android:layout_centerHorizontal="true"
        android:filterTouchesWhenObscured="false" />


    <Button
        android:id="@+id/play_artist_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/fastbutton"
        android:filterTouchesWhenObscured="false"
        android:onClick="onPlayArtistButtonClicked"
        android:textSize="10sp"
        grid:layout_columnWeight="1" />

    <Button
        android:id="@+id/play_playlist_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/play_artist_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/slow_buttonpresionar"
        android:filterTouchesWhenObscured="false"
        android:onClick="onPlayPlaylistButtonClicked"
        android:textSize="10sp"
        grid:layout_columnWeight="1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:background="@drawable/pause"
        android:layout_centerHorizontal="true"
        android:onClick="pausa" />

</RelativeLayout>
