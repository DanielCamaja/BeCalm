<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Main5Activity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stat_name"
            android:id="@+id/anyadir" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/trazo"
            android:id="@+id/trazo" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/borrar"
            android:id="@+id/borrar" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/guardar"
            android:id="@+id/guardar" />

    </LinearLayout>

    <becalm.com.becalm.Lienzo
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:id="@+id/lienzo"
        android:background="@drawable/mandala"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/colornaranja"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:tag="#ffac81" />

        <ImageButton
            android:id="@+id/colorrojo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/rojo"
            android:tag="#ff928b" />

        <ImageButton
            android:id="@+id/colorsalmon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/salmon"
            android:tag="#fec3a6" />

        <ImageButton
            android:id="@+id/colorverdelima"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/verdelima"
            android:tag="#efe9ae" />

        <ImageButton
            android:id="@+id/colorverdeacua"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/verdeacua"
            android:tag="#cdeac0" />

        <ImageButton
            android:id="@+id/colorazulmarino"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/azulmarino"
            android:tag="#264653" />

        <ImageButton
            android:id="@+id/colorazulverdoso"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/azulverdoso"
            android:tag="#2a9d8f" />

        <ImageButton
            android:id="@+id/coloramarrillomostaza"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/amarillomostaza"
            android:tag="#e9c46a" />


    </LinearLayout>

</LinearLayout>