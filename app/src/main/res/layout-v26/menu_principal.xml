<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <Button
        android:id="@+id/inspire"
        android:background="@drawable/btn_inspire"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        />


    <ImageView
        android:id="@+id/nombre_inspire"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:importantForAccessibility="no"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="193dp"
        app:srcCompat="@drawable/inspire_nombre" />


    <Button
        android:id="@+id/distrac"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/btn_distract" />

    <Button
        android:id="@+id/focus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="270dp"/>

    <Button
        android:id="@+id/relax"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="270dp"
        android:background="@drawable/btn_relax" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="445dp"
        app:srcCompat="@drawable/relax_nombre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="194dp"
        app:srcCompat="@drawable/distract_nombre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/focus_nombre"
        tools:ignore="ContentDescription" />


</RelativeLayout>